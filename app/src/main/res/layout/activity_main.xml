<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input_temperature"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Ingrese temperatura"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/btn_celsius_to_fahrenheit"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_celsius_to_fahrenheit"
        android:layout_width="258dp"
        android:layout_height="47dp"
        android:layout_marginTop="84dp"
        android:text="Celsius a Fahrenheit"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_temperature" />

    <Button
        android:id="@+id/btn_kelvin_to_celsius"
        android:layout_width="259dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="Kelvin a Celsius"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_celsius_to_fahrenheit" />

    <Button
        android:id="@+id/btn_fahrenheit_to_kelvin"
        android:layout_width="259dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:text="Fahrenheit a Kelvin"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_kelvin_to_celsius" />

    <TextView
        android:id="@+id/output_result"
        android:layout_width="146dp"
        android:layout_height="57dp"
        android:layout_marginTop="84dp"
        android:text="Resultado"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_fahrenheit_to_kelvin" />

</androidx.constraintlayout.widget.ConstraintLayout>
